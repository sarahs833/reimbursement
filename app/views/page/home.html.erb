<div class="container-fluid vh-100 col-12">
  <div class="container height-70">
    <div class="row d-flex justify-content-center height-70">
      <div class="col-md-5 signin">
        <%= render 'shared/signin' %>
      </div>

      <div class="col-md-5 login">
        <%= render 'shared/login' %>
      </div>
    </div>
  </div>
  <div class="jumbotron jumbotron-fluid height-30">
    <div class="container text-center">
      <p class="lead">Please sign up or login directly.</p>
      <%= link_to 'Log in', root_url, class: 'btn btn-outline-warning login mt-5 btn-lg w-25',remote:true %>
      <%= link_to 'Sign up', root_url, class: 'btn btn-success sign_up mt-5 btn-lg w-280 absolute to-left', remote:true %>
    </div>
  </div>
</div>
