<div class="col-lg-12 mt-5">
  <div class="card">
    <div class="card-body">
      <div class="col-12">
        <h4 class="mt-0 header-title">My Reimbursement</h4>
      </div>
      <div class="col-12">
        <hr class="my-4">
      </div>
      <%= form_tag(expenses_path,method: :get) do %>
        <div class="row">
          <div class="col-3">
            <%= text_field_tag(:search, params[:search],class:'form-control',placeholder:'Search..',autocomplete:'off')%>
          </div>
          <%= submit_tag "search",class:'btn btn-outline-warning' %>
        </div>
      <%end%>
      <table class="mt-3" style="width:100%">
        <tr>
          <th>Submit Date/count</th>
          <th>Amount</th>
          <th>Usage/Description</th>
          <th>Status</th>
          <th></th>
        </tr>
      <%@expenses.find_each do |expense| %>
        <tr>
          <td><%=expense.date%>(<%=expense.people%>)</td>
          <td><%=expense.amount%></td>
          <td><%=expense.usage.capitalize()%><br><%=expense.description%></td>
          <td><%= status_exist?(expense)%></td>
          <td><%=button_tag "review detail", class:'btn btn-outline-info' %></td>
        </tr>
      <%end%>
      </table>
    </div>
    <%=link_to 'Add Reimbursement', users_new_expense_path,class:'link ml-3 mb-3' %>
  </div>
</div>
