<div class='nested-fields col-12 row'>
   <div class="col-3">
      <%= f.input :usage, :collection => Expense::USAGE, :input_html => {class:'form form-control', type:'array'} %>
    </div>

    <div class="col-3">
      <%= f.input :amount, placeholder: '0.0 rmb',:input_html => {class:'form-control'}%>
    </div>

    <div class="col-3">
      <%= f.input :people, collection: 1..5,:input_html => {class:'form-control nowidth'},include_blank: false, include_hidden: false %>
    </div>

    <div class="col-3">
      <%= f.input :status,:input_html => {class:'form-control',type:'array'} %>
    </div>

    <div class="col-3">
      <%= f.input :date, :input_html => { class:'form-control datetimepicker-input','data-target':'#datetimepicker1',type:'array'} %>
      <!-- <input name="expense[date]" type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1"/> -->
    </div>
    <div class="col-10">
      <%= f.input :description, as: :text,:input_html => {class:'form-control',type:'array'} %>
    </div>
    <div class="col-10">
      <%= f.check_box :_destroy %>
    </div>

</div>
