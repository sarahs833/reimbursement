<div class="col-lg-12 mt-5">
  <div class="card">
    <div class="card-body">
      <%= simple_form_for @account do |form| %>
       <div class="row p-3" style="margin-bottom: 20px;">
          <div class="col-12">
            <h4 class="mt-0 header-title">ADD Reimbursement</h4>
          </div>
          <div class="col-12">
            <hr class="my-4">
          </div>
            <%= render 'shared/errors', object: @account %>
            <p><strong>expenses:</strong></p>

              <%= form.fields_for :expenses do |expense| %>
                  <div class="col-3">
                    <%= expense.input :usage, :collection => Expense::USAGE, :input_html => {class:'form form-control', type:'array'} %>
                  </div>

                  <div class="col-3">
                    <%= expense.input :amount, placeholder: '0.0 rmb',:input_html => {class:'form-control'}%>
                  </div>

                  <div class="col-3">
                    <%= expense.input :people, collection: 1..5,:input_html => {class:'form-control nowidth'},include_blank: false, include_hidden: false %>
                  </div>

                  <div class="col-3">
                    <%= expense.input :status,:input_html => {class:'form-control',type:'array'} %>
                  </div>

                  <div class="col-3">
                    <%= expense.input :date, :input_html => { class:'form-control datetimepicker-input','data-target':'#datetimepicker1',type:'array'} %>
                        <!-- <input name="expense[date]" type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1"/> -->
                  </div>
                  <div class="col-10">
                    <%= expense.input :description, as: :text,:input_html => {class:'form-control',type:'array'} %>
                  </div>
                  <div class="col-10">
                    <%= expense.check_box :_destroy %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
