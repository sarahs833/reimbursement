<div class="col-lg-12 mt-5">
  <div class="card">
    <div class="card-body">
      <%= simple_form_for @account do |form| %>
      <div class="row p-3" style="margin-bottom: 20px;">
        <div class="col-12">
          <h4 class="mt-0 header-title">ADD Reimbursement</h4>
        </div>
        <div class="col-12">
          <hr class="my-4">
        </div>
        <%= render 'shared/errors', object: @account %>

        <%= form.fields_for :expenses do |expense| %>
          <%= render 'expense_fields', f: expense %>
        <% end %>
        <div class="links col-12">
          <%= link_to_add_association 'add new expense', form, :expenses,class:'btn btn-secondary mt-3' %>
        </div>
      </div>
      <div class="col-lg-12 mt-3">
        <div class="actions">
          <%= form.submit "submit",class:'btn btn-success btn-lg mb-5'%>
          <%= link_to "my reimbursement", accounts_path,class:'btn btn-lg btn-outline-dark mb-5' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
